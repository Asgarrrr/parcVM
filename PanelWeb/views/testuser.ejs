                                <input class="form-check-input" type="checkbox" />
                            </td>
                            <td><%= VM.vmid %></td>
                            <td id="VM-<%= VM.vmid %>-name"><%= VM.name %></td>
                            <td id="VM-<%= VM.vmid %>-status"><%= VM.status %></td>
                            <td>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </main>
    </body>

